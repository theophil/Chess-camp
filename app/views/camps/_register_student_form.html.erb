<%= simple_form_for(@camp, html: { class: 'form-horizontal' }) do |f| %>
    
    <%= f.input :student_ids, collection: eligible_students, label: "Students", prompt: "Select student..." %>
    <%= f.input :payment_status %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
    </div>

<% end %>
