<h3>Upcoming Camps</h3>

<table class="table">
  <tr>
    <th width="260">Name</th>
    <th width="120">Start On</th>
    <th width="120">Time</th>
    <th>Description</th>
    <th>Ratings</th>
    <th></th>
  </tr>

<% @upcoming_camps_for_guest.each do |camp| %>
  <tr>
    <td><%= link_to camp.name, camp_path(camp) %></td>
    <td align="center"><%= camp.start_date.strftime('%m/%d/%y') %></td>
    <td align="center"><%= camp.time_slot == "am" ? "Morning" : "Afternoon" %></td>
    <td><%= camp.curriculum.description %></td>
    <td><%= camp.curriculum.min_rating.zero? ? "Unrated - " : "#{camp.curriculum.min_rating} - " + "#{camp.curriculum.max_rating }" %></td> <!--camp.curriculum.max_rating.nil? ? "No maximum" : "#{camp.curriculum.max_rating}" %></td>-->
    <td><%= link_to 'Edit', edit_camp_path(camp), class: "button tiny radius" %></td>
  </tr>
<% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @upcoming_camps_for_guest, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>